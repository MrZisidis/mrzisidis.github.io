    <script>
        // --- Interactive Definitions for Activity 2 ---
        const termCards = document.querySelectorAll('.term-card');
        const allNodes = document.querySelectorAll('.tree-svg-node');
        const allMarkers = document.querySelectorAll('[data-marker]');

        termCards.forEach(card => {
            card.addEventListener('mouseover', () => {
                const targetClass = card.dataset.target;

                // Highlight nodes
                allNodes.forEach(node => {
                    if (node.dataset.marker.includes(targetClass)) {
                        node.querySelector('circle').classList.add('highlighted-node');
                    }
                });

                // Highlight subtree area
                const subtreeMarker = document.getElementById(`subtree-${targetClass}-marker`);
                if (subtreeMarker) {
                    subtreeMarker.classList.remove('opacity-0');
                }
            });

            card.addEventListener('mouseout', () => {
                allNodes.forEach(node => {
                     node.querySelector('circle').classList.remove('highlighted-node');
                });
                allMarkers.forEach(marker => {
                    if(marker.id.includes('subtree')) {
                        marker.classList.add('opacity-0');
                    }
                })
            });
        });

        // --- Show Solution Button for Activity 3 ---
        const showSolutionBtn = document.getElementById('show-solution-btn');
        const solutionTree = document.getElementById('solution-tree');

        showSolutionBtn.addEventListener('click', () => {
            solutionTree.classList.remove('hidden');
            showSolutionBtn.classList.add('hidden');
        });
    </script>
